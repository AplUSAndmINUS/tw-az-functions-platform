{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  // Image Processing Security Configuration
  // Configure these values based on your security requirements
  "ImageSecurity": {
    // Maximum image dimensions in pixels (default: 8192x8192)
    // Prevents processing of images with malicious dimensions
    "MaxImageWidth": 8192,
    "MaxImageHeight": 8192,
    
    // Maximum memory allocation for image processing in MB (default: 256)
    // Prevents DoS attacks through memory exhaustion
    "MaxMemoryMB": 256,
    
    // Maximum file size for processing in MB (default: 50)
    // Blocks processing of oversized files
    "MaxFileSizeMB": 50,
    
    // Processing timeout in seconds (default: 30)
    // Prevents hanging operations
    "ProcessingTimeoutSeconds": 30,
    
    // Whether to automatically orient images based on EXIF (default: true)
    // Handles EXIF orientation data securely
    "AutoOrient": true,
    
    // Whether to strip EXIF metadata from processed images (default: true)
    // Prevents information disclosure through metadata
    "StripExifMetadata": true
  }
}